FROM alpine:latest

# Update and install main packages.
RUN apk update && apk add bash stress-ng

ENV STTIME=10

# Copy stress_test.sh script.
COPY ./stress_test.sh ./stress_test.sh
RUN chmod +x ./stress_test.sh

# Default execution.
CMD ["/bin/bash", "-c", "./stress_test.sh"]


