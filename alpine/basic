FROM alpine:3.12.3

# Update packages.
RUN apk update

# Create a new user.
RUN adduser -h /home/user -s /bin/sh -u 1000 -g 1000 -D user

# Set <(user)> as the default user.
WORKDIR /home/user
ENV HOME /home/user
USER user

# Default execution.
CMD ["/bin/sh"]


